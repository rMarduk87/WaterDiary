<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

	<LinearLayout
        android:id="@+id/item_block"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="@dimen/dp_10"
        tools:ignore="UselessParent">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/dp_5"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/lbl_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:includeFontPadding="false"
				android:layout_gravity="center_vertical"
				android:text="@string/_time"
				android:textColor="@color/rdo_gender_select"
				android:textSize="@dimen/dp_30"
				android:fontFamily="@font/calibri_regular"
                tools:ignore="SpUsage" />

			<RelativeLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1">

				<ImageView
					android:id="@+id/img_remove"
					android:layout_width="@dimen/dp_25"
					android:layout_height="@dimen/dp_25"
					android:layout_centerInParent="true"
					android:layout_marginStart="@dimen/dp_10"
					android:layout_marginEnd="@dimen/dp_10"
					android:layout_gravity="center_vertical"
					android:contentDescription="@string/img"
					android:src="@drawable/ic_dot"
                    app:tint="@color/rdo_gender_select" />

			</RelativeLayout>


			<androidx.appcompat.widget.SwitchCompat
				android:id="@+id/switch_reminder"
				android:layout_width="74dp"
				android:layout_height="40dp"
				android:background="@drawable/switch_back"
				android:button="@null"
				android:checked="true"
				app:track="@null"
				android:thumb="@null"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/dp_15"
			android:layout_marginBottom="@dimen/dp_15"
            android:baselineAligned="false"
            android:orientation="horizontal">

			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1">

				<CheckBox
					android:id="@+id/chk_sunday"
					android:layout_width="@dimen/dp_40"
					android:layout_height="@dimen/dp_40"
					android:layout_centerInParent="true"
					android:checked="true"
					android:button="@null"
					android:gravity="center"
					android:background="@drawable/rdo_back_week"
					android:text="@string/s"
					android:textSize="@dimen/dp_15"
					android:textColor="@drawable/rdo_back_week"
					android:fontFamily="@font/calibri_regular"
                    tools:ignore="SpUsage" />

			</RelativeLayout>

			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1">

				<CheckBox
					android:id="@+id/chk_monday"
					android:layout_width="@dimen/dp_40"
					android:layout_height="@dimen/dp_40"
					android:layout_centerInParent="true"
					android:checked="true"
					android:button="@null"
					android:gravity="center"
					android:background="@drawable/rdo_back_week"
					android:text="@string/m"
					android:textSize="@dimen/dp_15"
					android:textColor="@drawable/rdo_back_week"
					android:fontFamily="@font/calibri_regular"
                    tools:ignore="SpUsage" />

			</RelativeLayout>

			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1">

				<CheckBox
					android:id="@+id/chk_tuesday"
					android:layout_width="@dimen/dp_40"
					android:layout_height="@dimen/dp_40"
					android:layout_centerInParent="true"
					android:checked="true"
					android:button="@null"
					android:gravity="center"
					android:background="@drawable/rdo_back_week"
					android:text="@string/t"
					android:textSize="@dimen/dp_15"
					android:textColor="@drawable/rdo_back_week"
					android:fontFamily="@font/calibri_regular"
                    tools:ignore="SpUsage" />

			</RelativeLayout>

			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1">

				<CheckBox
					android:id="@+id/chk_wednesday"
					android:layout_width="@dimen/dp_40"
					android:layout_height="@dimen/dp_40"
					android:layout_centerInParent="true"
					android:checked="true"
					android:button="@null"
					android:gravity="center"
					android:background="@drawable/rdo_back_week"
					android:text="@string/w"
					android:textSize="@dimen/dp_15"
					android:textColor="@drawable/rdo_back_week"
					android:fontFamily="@font/calibri_regular"
                    tools:ignore="SpUsage" />

			</RelativeLayout>

			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1">

				<CheckBox
					android:id="@+id/chk_thursday"
					android:layout_width="@dimen/dp_40"
					android:layout_height="@dimen/dp_40"
					android:layout_centerInParent="true"
					android:checked="true"
					android:button="@null"
					android:gravity="center"
					android:background="@drawable/rdo_back_week"
					android:text="@string/th"
					android:textSize="@dimen/dp_15"
					android:textColor="@drawable/rdo_back_week"
					android:fontFamily="@font/calibri_regular"
                    tools:ignore="SpUsage" />

			</RelativeLayout>

			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1">

				<CheckBox
					android:id="@+id/chk_friday"
					android:layout_width="@dimen/dp_40"
					android:layout_height="@dimen/dp_40"
					android:layout_centerInParent="true"
					android:checked="true"
					android:button="@null"
					android:gravity="center"
					android:background="@drawable/rdo_back_week"
					android:text="@string/f"
					android:textSize="@dimen/dp_15"
					android:textColor="@drawable/rdo_back_week"
					android:fontFamily="@font/calibri_regular"
                    tools:ignore="SpUsage" />

			</RelativeLayout>

			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1">

				<CheckBox
					android:id="@+id/chk_saturday"
					android:layout_width="@dimen/dp_40"
					android:layout_height="@dimen/dp_40"
					android:layout_centerInParent="true"
					android:checked="false"
					android:button="@null"
					android:gravity="center"
					android:background="@drawable/rdo_back_week"
					android:text="@string/satu"
					android:textSize="@dimen/dp_15"
					android:textColor="@drawable/rdo_back_week"
					android:fontFamily="@font/calibri_regular"
                    tools:ignore="SpUsage" />

			</RelativeLayout>



		</LinearLayout>

		<View
			android:layout_width="fill_parent"
			android:layout_height="0.5dp"
			android:layout_marginBottom="@dimen/dp_10"
			android:background="@color/rdo_gender_select"/>

    </LinearLayout>

</RelativeLayout>