<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/item_block"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/drawable_item_selector"
            android:backgroundTint="@color/white">

            <ImageView
                android:id="@+id/img_selected"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/checkmark_icon"
                android:contentDescription="@string/img"
                app:tint="@color/rdo_gender_select" />

			<TextView
				android:id="@+id/lbl_sound_name"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:includeFontPadding="true"
				android:layout_weight="1"
				android:layout_gravity="center_vertical"
				android:text="@string/sound_name"
				android:textColor="@color/rdo_gender_select"
				android:textSize="@dimen/dp_14"
				android:fontFamily="@font/calibri_regular"
                tools:ignore="SpUsage" />



		</LinearLayout>


	</LinearLayout>

</RelativeLayout>