<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_nav_graph.xml"
    app:startDestination="@id/MenuFragment">

    <fragment
        android:id="@+id/MenuFragment"
        android:name="rpt.tool.waterdiary.ui.menu.MenuFragment"
        android:label="MenuFragment"
        tools:layout="@layout/fragment_menu">
        <action
            android:id="@+id/action_menuFragment_to_historyFragment"
            app:destination="@id/HistoryFragment" />
        <action
            android:id="@+id/action_menuFragment_to_faqFragment"
            app:destination="@id/FaqFragment" />
        <action
            android:id="@+id/action_menuFragment_to_reportFragment"
            app:destination="@id/ReportFragment" />
        <action
            android:id="@+id/action_menuFragment_to_settingsFragment"
            app:destination="@id/SettingsFragment" />
        <action
            android:id="@+id/action_menuFragment_to_profileFragment"
            app:destination="@id/ProfileFragment" />
        <action
            android:id="@+id/action_menuFragment_to_reminderFragment"
            app:destination="@id/ReminderFragment" />
        <action
            android:id="@+id/action_menuFragment_to_rechedGoalFragment"
            app:destination="@id/ReachedGoalFragment" />
        <action
            android:id="@+id/action_menuFragment_to_containerReportFragment"
            app:destination="@id/ContainerReportFragment" />
        <action
            android:id="@+id/action_menuFragment_to_backUpRestoreFragment"
            app:destination="@id/BackUpRestoreFragment" />
    </fragment>

    <fragment
        android:id="@+id/HistoryFragment"
        android:name="rpt.tool.waterdiary.ui.history.HistoryFragment"
        android:label="HistoryFragment"
        tools:layout="@layout/fragment_history">
    </fragment>
    <fragment
        android:id="@+id/ReportFragment"
        android:name="rpt.tool.waterdiary.ui.userinfo.InitUserInfoFragment"
        android:label="ReportFragment"
        tools:layout="@layout/fragment_init_user_info">
    </fragment>
    <fragment
        android:id="@+id/SettingsFragment"
        android:name="rpt.tool.waterdiary.ui.settings.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings">
    </fragment>
    <fragment
        android:id="@+id/FaqFragment"
        android:name="rpt.tool.waterdiary.ui.faq.FaqFragment"
        android:label="FaqFragment"
        tools:layout="@layout/fragment_faq">
    </fragment>
    <fragment
        android:id="@+id/ProfileFragment"
        android:name="rpt.tool.waterdiary.ui.userinfo.InitUserInfoFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_init_user_info">
    </fragment>
    <fragment
        android:id="@+id/ReminderFragment"
        android:name="rpt.tool.waterdiary.ui.userinfo.InitUserInfoFragment"
        android:label="ReminderFragment"
        tools:layout="@layout/fragment_init_user_info">
    </fragment>
    <fragment
        android:id="@+id/ReachedGoalFragment"
        android:name="rpt.tool.waterdiary.ui.reached.ReachedGoalFragment"
        android:label="ReachedGoalFragment"
        tools:layout="@layout/fragment_reached_goal">
    </fragment>
    <fragment
        android:id="@+id/ContainerReportFragment"
        android:name="rpt.tool.waterdiary.ui.report.ContainerReportFragment"
        android:label="ContainerReportFragment"
        tools:layout="@layout/fragment_container_report">
    </fragment>
    <fragment
        android:id="@+id/BackUpRestoreFragment"
        android:name="rpt.tool.waterdiary.ui.report.ContainerReportFragment"
        android:label="BackUpRestoreFragment"
        tools:layout="@layout/fragment_container_report">
    </fragment>

</navigation>